                <Button Text="&#xf232;" FontSize="Large" FontFamily="{StaticResource FontAwesomeBrands}" TextColor="DarkGray" BackgroundColor="Transparent" Grid.Row="1" Grid.Column="4" VerticalOptions="Center" HorizontalOptions="Center" Clicked="OpenWhatsApp"/>
                <Label Text="Carabobo" FontSize="Micro" VerticalOptions="Center" HorizontalOptions="Center" TextColor="DarkGray" Grid.Column="0" Grid.Row="2" FontAttributes="Bold"/>
                <Label Text="Bodegón" FontSize="Micro" VerticalOptions="Center" HorizontalOptions="Center" TextColor="DarkGray" Grid.Column="1" Grid.Row="2" FontAttributes="Bold"/>
                <Label Text="Sesión" FontSize="Micro" VerticalOptions="Center" HorizontalOptions="Center" TextColor="DarkGray" Grid.Column="2" Grid.Row="2" FontAttributes="Bold"/>
                <Label Text="Dolares" FontSize="Micro" VerticalOptions="Center" HorizontalOptions="Center" TextColor="DarkGray" Grid.Column="3" Grid.Row="2" FontAttributes="Bold"/>
                <Label Text="Whatsapp" FontSize="Micro" VerticalOptions="Center" HorizontalOptions="Center" TextColor="DarkGray" Grid.Column="4" Grid.Row="2" FontAttributes="Bold"/>
            </Grid>
    </StackLayout>
    </ContentPage>
