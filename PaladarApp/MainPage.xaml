                <Entry x:Name="RegApellido" Placeholder="APELLIDO" Grid.Column="1" Grid.Row="2" VerticalOptions="Center" HorizontalOptions="Fill" Margin="2,2,2,2" PlaceholderColor="Gray" />
                <Picker x:Name="RegMunicipio" Title="MUNICIPIO"  Grid.Row="3" Grid.Column="0" TextColor="Gray" Grid.ColumnSpan="2">
                    <Picker.Items>
                        <x:String>Valencia(San Jose)</x:String>
                        <x:String>Naguanagua</x:String>
                        <x:String>San Diego</x:String>
                    </Picker.Items>
                </Picker>
                <Picker x:Name="RegTelefono" Title="PREFIJO"  Grid.Row="5" Grid.Column="0" TextColor="Gray" >
                    <Picker.Items>
                        <x:String>0241</x:String>
                        <x:String>0414</x:String>
                        <x:String>0424</x:String>
                        <x:String>0412</x:String>
                        <x:String>0416</x:String>
                        <x:String>0426</x:String>
                    </Picker.Items>
                </Picker>
