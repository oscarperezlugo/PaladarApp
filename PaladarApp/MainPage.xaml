    <ContentPage x:Name="ListaBolivares">
        <ContentPage.Resources>
            <ResourceDictionary>
                <local:ConverterBase64ImageSource x:Key="Base64ToImageConverter" />
            </ResourceDictionary>
        </ContentPage.Resources>
        <StackLayout>
            <Grid BackgroundColor="#EC9C2B">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="Paladar.png" Grid.Column="0" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Start"/>
                <Button Text="&#xf07a;" Grid.Row="0" Grid.Column="2" TextColor="Black" HorizontalOptions="End" VerticalOptions="Center" FontFamily="{StaticResource FontAwesomeSolid}" BackgroundColor="Transparent" Clicked="CarritoClicked"/>
                <Button x:Name="usuario" Grid.Row="0" Grid.Column="1" FontSize="Small" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="Transparent"/>
                <SearchBar x:Name="SearchBar" Placeholder="Hoy estoy buscando..."  PlaceholderColor="Gray" BackgroundColor="White" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" />
            </Grid>
            <ScrollView>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1200"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="ListaProductos" BackgroundColor="White" VerticalOptions="Fill" Grid.Row="0" Grid.Column="0" HasUnevenRows="True" SeparatorColor="LightGray" ItemSelected="ItemClicked">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid Margin="2,2,2,2" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{Binding Producto1}"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Center"   TextColor="DarkGray" FontSize="Large" FontAttributes="Bold"  />
                                        <Label Text="{Binding Categoria}"  Grid.Row="1" Grid.Column="1"  HorizontalOptions="Center" VerticalOptions="Center"   TextColor="Blue" FontSize="Small" FontAttributes="Italic"  />
                                        <Label Text="{Binding Cantidad}"  Grid.Row="1" Grid.Column="2"  HorizontalOptions="Center" VerticalOptions="End"   TextColor="Gray" FontSize="Micro" FontAttributes="Bold"  />
                                        <Label Text= "Cantidad Disponible"  Grid.Row="1" Grid.Column="2"  HorizontalOptions="Center" VerticalOptions="Start"   TextColor="Gray" FontSize="Micro"   />
                                        <Label Text="{Binding Precio, StringFormat='{0:F2}'}"  Grid.Row="2" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"   TextColor="Red" FontSize="Medium" FontAttributes="Bold" />
                                        <Label Text="Bs"  Grid.Row="2" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center"   TextColor="Red" FontSize="Medium" FontAttributes="Bold" />
                                        <Label Text="{Binding Impuesto}"  Grid.Row="2" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center"   TextColor="Gray" FontSize="Small" FontAttributes="Bold" />
                                        <Image Source="{Binding Foto, Converter={StaticResource Base64ToImageConverter}}"  Aspect="AspectFill" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" />
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </ScrollView>
            <Grid BackgroundColor="#EFEFEF">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>
                <BoxView BackgroundColor="DarkGray" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"/>
                <Button Text="&#xf3c5;" FontSize="Large" FontFamily="{StaticResource FontAwesomeSolid}" TextColor="DarkGray" BackgroundColor="Transparent" Grid.Row="1" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center" />
                <Button Text="&#xf0c9;" FontSize="Large" FontFamily="{StaticResource FontAwesomeSolid}" TextColor="DarkGray" BackgroundColor="Transparent" Grid.Row="1" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" Clicked="BodegonClicked"/>
                <Button Text="&#xf007;" FontSize="Large" FontFamily="{StaticResource FontAwesomeSolid}" TextColor="DarkGray" BackgroundColor="Transparent" Grid.Row="1" Grid.Column="2" VerticalOptions="Center" HorizontalOptions="Center" Clicked="LoginClicked"/>
