                </Grid.ColumnDefinitions>
                <Label x:Name="clientefactura" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" />
                <Label x:Name="fechafactura" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" />
            </Grid>
            <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="11*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                    <ListView Grid.Row="0" x:Name="FacturaFinal" SeparatorColor="White" IsPullToRefreshEnabled="true" ItemSelected="FacturaFinal_ItemSelected" >
                        <ListView.Header>
                        <StackLayout >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="CANTIDAD" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0"/>
                                <Label Text="PRODUCTO" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1"/>
                                <Label Text="PRECIO" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="2"/>
                            </Grid>
                        </StackLayout>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.ContextActions>
                                        <MenuItem Clicked="DeleteClicked" Text="Retirar" IsDestructive="True"  />
                                    </ViewCell.ContextActions>
                                <StackLayout Margin="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Label Text="{Binding Cantidad}" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center"/>
                                        <Label Text="{Binding Producto}" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center"/>
                                        <Label Text="{Binding Precio, StringFormat='{0:F2}'}" Grid.Column="2" VerticalOptions="Center" HorizontalOptions="End"/>
                                    </Grid>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            </ScrollView>
            <Grid BackgroundColor="WhiteSmoke">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Text="TOTAL Bs" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" />
                <Label x:Name="totalcuatro" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" />
                <Label Text="TOTAL $" Grid.Row="1" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" />
                <Label x:Name="totalcinco" Grid.Row="1" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" />
                <Button Text="FINALIZAR COMPRA" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="FillAndExpand" VerticalOptions="Center" BackgroundColor="Transparent" TextColor="Black" FontAttributes="Bold" Clicked="FinalizarClicked" />
            </Grid>
        </StackLayout>
    </ContentPage>
</CarouselPage>
