                <Entry x:Name="RegContra" Placeholder="CONTRASEÑA" Grid.Column="0" Grid.Row="6" VerticalOptions="Center" HorizontalOptions="Fill" Margin="2,2,2,2" PlaceholderColor="Gray" IsPassword="True" Grid.ColumnSpan="2"/>
